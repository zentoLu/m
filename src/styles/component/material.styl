.material{
	.btn-get-captcha{
		position absolute
		right: 40px;
    	margin-top: -40px;
    	width: 60px;
    	text-align: center;
    	background: $green;
    	color: white;
    	line-height: 2;
	}
	.list-item{
	    padding-left: gap24;
	    .content {
	    	box-sizing border-box
	        border-top:$border;
	        line-height: 45px;
	        padding-left: 0.4em;
	        input.input-text{
	            new-flex();
	            &[readonly]{
	                background: #f2f2f2;
	            }
	        }
	        &.readonly{
	            background: #f2f2f2;
	        }
	    }
	}
	.icon-head,.icon-bar-graph{
		color: $blue;
		font-size: 16px;
		margin-right 6px
		position relative
		top 2px
	}    
	
	h2 {
	    padding-top: 12px;
	    padding-bottom: 15px;
	    padding-left: 12px;
	}
	
	section{
		border-top: 1px solid #dce1e8;
		border-bottom: 1px solid #dce1e8;
		margin-top: 8px;
		background: #fff;
	}
	.label{
		margin-right: .8em;
		color: #5e5e5e;
		&:after{
			content: ':';
		}
	}
	
	.bun-blue {
	    width: 100%;
	    color: #fff;
	    background: #3cbaff;
	    height: 2.75em;
	    line-height: 2.75em;
	    text-align: center;
	    font-size: 3.2rem;
	    border-radius: 26.400000000000002px;
	}
	
	.info{
	    .content{
	        &>div{
	            padding-left: gap24;
	        }
	        .rate-box{
	            padding-left:0.4em;
	        }
	    }
	    .msg-box{
	        border-top: 1px solid #dce1e8;
	        border-bottom: 1px solid #dce1e8;
	        background: #e9ecf1;
	        padding-left: gap24;
	        padding-top: gap24;
	        padding-bottom: gap24;
	        position:relative;
	        top:1px;
	        z-index:1;
	    }

	}
	.btn-box{
		margin-top: 1.75em;
		padding: 12px;
	}
	#later{
		margin-top 16px
	}
	
	.inputFiles{
		position:absolute;
		top:0;
		left:0;
		width:100%;
		height:100%;
		display:block;
		opacity:0;
		z-index:99
	}
	.idCard{
		width: 84%;
		height: 120px;
		display: inline-block;
		border: dashed 2px #d2d2d2;
		overflow: hidden;
		.add{
			height:80px;
			padding-top:30px;
			img{
				width: 40px;
			}
		}
		.add-text{
			color: #a0a0a0;
		}
	}
	.example{
		color: #a0a0a0;
		padding-top: 5px;
		&>img{
			width:80%;
			margin-top: 11px;
		}
	}
	.upload-part{
		text-align center
	}	
	
}


.breadcrumb{
	&>ul{
		background-color: #80bef5;
	}
	.step2 .step-text{
		position: absolute;
		min-width: 8em;
		width: 100%;
		z-index: 1;
	}
	li{
		&>div{
			text-align: center;
			position: relative;
			padding-top: 15px;
			padding-bottom: 10px;
			background-color: #80bef5;
			.line-right{
				display: inline-block;
				width: 50%;
				border-top: solid 2px #cce5fb;
				position: absolute;
				right: 0;
				margin-top: 7px;
			}
			.line-left{
				display: inline-block;
				width: 50%;
				border-top: solid 2px #cce5fb;
				position: absolute;
				left: 0;
				margin-top: 7px;
			}
			.point{
				width: 16px;
				height: 16px;
				border-radius: 9px;
				border: solid 2px #cce5fb;
				background-color: #80bef5;
				position: relative;
				z-index: 1;
			}
			.step-text{
				color: #cce5fb;
				font-size: 2.6rem;
			}
			&.on{
				.line-right{
					display: inline-block;
					width: 50%;
					border-top: solid 2px #fff;
					position: absolute;
					right: 0;
					margin-top: 7px;
				}
				.line-left{
					display: inline-block;
					width: 50%;
					border-top: solid 2px #fff;
					position: absolute;
					left: 0;
					margin-top: 7px;
				}
				.point{
					width: 16px;
					height: 16px;
					border-radius: 9px;
					background-color: #ffffff;
					border: none;
					position: relative;
					z-index: 1;
				}
				.step-text{
					color: #ffffff;
					font-size: 2.6rem;
				}
			}
		}
	}
}